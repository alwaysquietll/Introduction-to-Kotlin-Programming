<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
            android:id="@+id/edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="点击我哦"
    />
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick_Toast"
            android:text="显示Toast信息框"
            android:textAllCaps="false"
    />
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick_Close"
            android:text="关闭Activity"
            android:textAllCaps="false"
    />
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick_ShowSecondActivity"
            android:text="显示SecondActivity"
            android:textAllCaps="false"
    />
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick_ShowWeb"
            android:text="浏览Web页面"
            android:textAllCaps="false"
    />
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick_ShowDial"
            android:text="显示拨号盘"
            android:textAllCaps="false"
    />
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick_SendData"
            android:text="向另一个窗口传递数据"
            android:textAllCaps="false"
    />
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick_ReturnData"
            android:text="调用可返回的数据"
            android:textAllCaps="false"
    />

</LinearLayout>